{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": true,
    "target": "es5",
    "experimentalDecorators": true,
    "baseUrl": "src",
    "paths": {
      "components/*": [
        "components/*"
      ],
      "theme": [
        "/src/theme"
      ],
      "src/*": [
        "/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
