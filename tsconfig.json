{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "es5", "dom"],
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "baseUrl": "src",
    "paths": {
      "components/*": [
        "components/*"
      ],
      "routers/*": [
        "routers/*"
      ],
      "constants/*": [
        "constants/*"
      ],
      "request/*": [
        "request/*"
      ],
      "theme/*": [
        "theme/*"
      ],
      "src/*": [
        "*"
      ],
      "state/*": [
        "state/*"
      ],
      "interface/*": [
        "interface/*"
      ],
      "utility/*": [
        "utility/*"
      ],
      "helper/*": [
        "helper/*"
      ],
    },
    "plugins": [{
      "name": "ts-graphql-plugin"
    }]
  },
  "exclude": ["dist", "build", "node_modules"]
}