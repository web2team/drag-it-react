{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "target": "es5",
    "experimentalDecorators": true,
    "baseUrl": "src",
    "paths": {
      "components/*": [
        "components/*"
      ],
      "routers/*": [
        "routers/*"
      ],
      "constants/*": [
        "constants/*"
      ],
      "theme/*": [
        "theme/*"
      ],
      "src/*": [
        "*"
      ],
      "state/*": [
        "state/*"
      ]
    },
    "plugins": [{
      "name": "ts-graphql-plugin"
    }]
  },
  "exclude": [
    "node_modules"
  ]
}