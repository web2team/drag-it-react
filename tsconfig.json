{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,

    "sourceMap": true,
    "target": "es5",
    "lib": ["es2015", "es2017", "dom"],
    "experimentalDecorators": true,
    "baseUrl": "src",
    "paths": {
      "components/*": [
        "components/*"
      ],
      "routers/*": [
        "routers/*"
      ],
      "constants/*": [
        "constants/*"
      ],
      "request/*": [
        "request/*"
      ],
      "theme/*": [
        "theme/*"
      ],
      "src/*": [
        "*"
      ],
      "state/*": [
        "state/*"
      ],
      "interface/*": [
        "interface/*"
      ],
      "utility/*": [
        "utility/*"
      ],
      "helper/*": [
        "helper/*"
      ]
    },
    "plugins": [{
      "name": "ts-graphql-plugin"
    }]
  },
  "exclude": [
    "node_modules"
  ]
}